            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "C/C++ Runner: Debug Session",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": false,
            "cwd": "c:/Sakshi/c++",
            "program": "c:/Sakshi/c++/build/Release/outRelease",
